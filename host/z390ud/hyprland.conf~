$monitor_1 = HDMI-A-1
$monitor_2 = HDMI-A-2
$monitor_3 = DVI-D-1 


monitor = $monitor_3,1920x1080,1344x-1080,1,transform,2
monitor = $monitor_2 , 3840x2160@60, 0x0, 1.5,transform,2
# monitor = $monitor_1,2560x1440@144,2560x0,1,bitdepth,10,vrr,1,cm,hdr
monitor = $monitor_1,2560x1440@144,2560x0,1



bind = $mainMod, backslash, exec, ~/nixos-config/host/z390ud/toggle-monitor.sh on $monitor_3 $monitor_2 $monitor_1
bind = $mainMod, bracketright, exec, ~/nixos-config/host/z390ud/toggle-monitor.sh off $monitor_3 $monitor_2
bind = $mainMod, bracketleft, exec, ~/nixos-config/host/z390ud/toggle-monitor.sh off $monitor_3

# bind = $mainMod, O, exec, hyprlock

env = WLR_NO_HARDWARE_CURSORS,1

# Make it a sane size everywhere
env = XCURSOR_SIZE,48
env = HYPRCURSOR_SIZE,48

# If XWayland apps have tiny cursors:
# xwayland {
#   force_zero_scaling = true
# }

env = QT_AUTO_SCREEN_SCALE_FACTOR,0
env = QT_ENABLE_HIGHDPI_SCALING,1
env = QT_SCALE_FACTOR_ROUNDING_POLICY,PassThrough




